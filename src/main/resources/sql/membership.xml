	<update id="updateUser" >
		UPDATE USER
		SET user_id = "1"
		WHERE user_id = #{userId}
	</update>
	
	<delete id="deleteUser">
		DELETE FROM USER 
		WHERE user_id = #{userId}
	</delete>
	 -->
	
</mapper>