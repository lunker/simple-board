<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ftt.sample_app.dao.code.ICodeDao">
	<resultMap type="ftt.sample_app.types.Code" id="codeResultMap">
		<id property="codeNo" column="code_no" />
		<result property="codeName" column="code_name" />
		<result property="shortCode" column="short_code" />
		<result property="categoryNo" column="category_no" />
	</resultMap>

	<select id="queryCode" resultMap="codeResultMap" parameterType="int">
		<![CDATA[
			SELECT code_no, code_name, short_code, category_no
				FROM code_list
				WHERE code_no = #{value}
		]]>
	</select>

	<select id="queryCodeList" resultMap="codeResultMap">
		<![CDATA[
			SELECT code_no, code_name, short_code, category_no
				FROM code_list
				WHERE category_no = #{categoryNo}
		]]>
	</select>

	<select id="queryCodeAllList" resultMap="codeResultMap">
		<![CDATA[
			SELECT code_no, code_name, short_code, category_no
				FROM code_list
		]]>
	</select>
</mapper>